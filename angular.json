{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "cache": {
      "enabled": false
    }
  },
  "newProjectRoot": "projects",
  "projects": {
    "charts-components": {
      "projectType": "library",
      "root": "projects/charts-components",
      "sourceRoot": "projects/charts-components/src",
      "prefix": "lib",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/charts-components/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/charts-components/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/charts-components/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/**/*.ts",
              "projects/**/*.component.html"
            ]
          }
        },
        "test": {
          "builder": "@angular-builders/custom-webpack:karma",
          "options": {
            "main": "projects/charts-components/src/test.ts",
            "tsConfig": "projects/charts-components/tsconfig.spec.json",
            "karmaConfig": "projects/charts-components/karma.conf.js",
            "codeCoverage": true,
            "customWebpackConfig": {
              "path": "./node_modules/@artstesh/forger/lib/webpack.config.js"
            }
          }
        }
      }
    }
  },
  "defaultProject": "charts-components"
}
