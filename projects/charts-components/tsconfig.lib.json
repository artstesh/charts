/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/lib",
    "target": "es2020",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": [],
    "lib": [
      "dom",
      "es2020"
    ]
  },
  "angularCompilerOptions": {
    "preserveSymlinks": true
  },
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts"
  ],
  "paths": {
    "@root/*": [
      "./*"
    ],
    "@themes/*": [
      "src/chart/themes/*"
    ],
    "@chart-plate/*": [
      "chart/chart-plate/*"
    ],
    "paths": {
      "@angular/*": [
        "./node_modules/@angular/*"
      ],
      "date-fns/*": [
        "./node_modules/date-fns/*"
      ],
      "date-fns": [
        "./node_modules/date-fns"
      ]
    }
  },
  "lib": [
    "es2020",
    "dom"
  ]
}
